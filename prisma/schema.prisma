generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id       String @id @default(uuid())
  username String

  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz(3)

  @@map("sessions")
}

model Algorithm {
  id            String        @id @default(uuid())
  type          AlgorithmType
  randomValues  Boolean       @map("random_values")
  initialValues Int[]         @map("initial_values")

  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz(3)
  updatedAt DateTime @default(now()) @map("updated_at") @db.Timestamptz(3)

  @@map("algorithms")
}

enum AlgorithmType {
  BUBBLE_SORT
  SELECTION_SORT
}
